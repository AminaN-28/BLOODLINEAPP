<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="45dp"
        android:text="0"
        android:gravity="end"
        android:id="@+id/Txt"/>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100">
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="2nd"
            android:id="@+id/scd"
            android:onClick="listenbtn"
            android:layout_weight="15" />
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="deg"
            android:id="@+id/deg"
            android:onClick="listenbtn"
            android:layout_weight="15"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="√"
            android:id="@+id/rac"
            android:onClick="listenbtn"
            android:layout_weight="15"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="C"
            android:id="@+id/ac"
            android:onClick="listenbtn"
            android:layout_weight="15"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="()"
            android:id="@+id/par"
            android:onClick="listenbtn"
            android:layout_weight="15"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="%"
            android:id="@+id/pourc"
            android:onClick="listenbtn"
            android:layout_weight="15"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="/"
            android:id="@+id/div"
            android:onClick="listenbtn"
            android:layout_weight="10"/>

    </LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100">
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="sin"
            android:id="@+id/sin"
            android:onClick="listenbtn"
            android:layout_weight="15"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="cos"
            android:id="@+id/cos"
            android:onClick="listenbtn"
            android:layout_weight="15"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="tan"
            android:id="@+id/tan"
            android:onClick="listenbtn"
            android:layout_weight="15"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="7"
            android:id="@+id/sept"
            android:onClick="listenbtn"
            android:layout_weight="15"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="8"
            android:id="@+id/huit"
            android:onClick="listenbtn"
            android:layout_weight="15"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="9"
            android:id="@+id/neuf"
            android:onClick="listenbtn"
            android:layout_weight="15"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="*"
            android:id="@+id/mult"
            android:onClick="listenbtn"
            android:layout_weight="10"/>

    </LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100">
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="ln"
            android:id="@+id/ln"
            android:onClick="listenbtn"
            android:layout_weight="15"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="log"
            android:id="@+id/log"
            android:onClick="listenbtn"
            android:layout_weight="15"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="1/X"
            android:id="@+id/UNX"
            android:onClick="listenbtn"
            android:layout_weight="15"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="4"
            android:id="@+id/quatre"
            android:onClick="listenbtn"
            android:layout_weight="15"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="5"
            android:id="@+id/cinq"
            android:onClick="listenbtn"
            android:layout_weight="15"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="6"
            android:id="@+id/six"
            android:onClick="listenbtn"
            android:layout_weight="15"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="-"
            android:id="@+id/moins"
            android:onClick="listenbtn"
            android:layout_weight="10"/>

    </LinearLayout>


    <LinearLayout android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:weightSum="100">
    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="exp"
        android:id="@+id/exp"
        android:onClick="listenbtn"
        android:layout_weight="15"/>
    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="x2"
        android:id="@+id/x2"
        android:onClick="listenbtn"
        android:layout_weight="15"/>
    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="xy"
        android:id="@+id/xy"
        android:onClick="listenbtn"
        android:layout_weight="15"/>
    <Button android:layout_height="wrap_content"
        android:layout_width="0dp" android:text="1"
        android:id="@+id/un"
        android:onClick="listenbtn"
        android:layout_weight="15"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="2"
        android:id="@+id/deux"
        android:onClick="listenbtn"
        android:layout_weight="15"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="3"
        android:id="@+id/trois"
        android:onClick="listenbtn"
        android:layout_weight="15"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="+"
        android:id="@+id/plus"
        android:onClick="listenbtn"
        android:layout_weight="10"/>

</LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100">
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="|x|"
            android:id="@+id/valX"
            android:onClick="listenbtn"
            android:layout_weight="15"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="π"
            android:id="@+id/pi"
            android:onClick="listenbtn"
            android:layout_weight="15"/>
        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="e"
            android:id="@+id/ex"
            android:onClick="listenbtn"
            android:layout_weight="15"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp" android:text="+/-"
            android:id="@+id/plusmoins"
            android:onClick="listenbtn"
            android:layout_weight="15"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="0"
            android:id="@+id/zero"
            android:onClick="listenbtn"
            android:layout_weight="15"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text=","
            android:id="@+id/virgule"
            android:onClick="listenbtn"
            android:layout_weight="15"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="="
            android:id="@+id/egal"
            android:onClick="listenbtn"
            android:layout_weight="10"/>

    </LinearLayout>


</LinearLayout>