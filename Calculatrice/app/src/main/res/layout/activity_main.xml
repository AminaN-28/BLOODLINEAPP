<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="50dp"
        android:text="0"
        android:gravity="end"
        android:id="@+id/Txt"/>


    <LinearLayout android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:weightSum="100">

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="C"
        android:id="@+id/ac"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="()"
        android:id="@+id/par"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="%"
        android:id="@+id/pourc"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="/"
        android:id="@+id/div"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

</LinearLayout>


    <LinearLayout android:orientation="horizontal"
    android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100">



    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="7"
        android:id="@+id/sept"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="8"
        android:id="@+id/huit"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="9"
        android:id="@+id/neuf"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="*"
        android:id="@+id/mult"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

</LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100">



    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="4"
        android:id="@+id/quatre"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="5"
        android:id="@+id/cinq"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="6"
        android:id="@+id/six"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="-"
        android:id="@+id/moins"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

</LinearLayout>


    <LinearLayout android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:weightSum="100">

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp" android:text="1"
        android:id="@+id/un"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="2"
        android:id="@+id/deux"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="3"
        android:id="@+id/trois"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="+"
        android:id="@+id/plus"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

</LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="100">

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp" android:text="+/-"
        android:id="@+id/plusmoins"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="0"
        android:id="@+id/zero"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text=","
        android:id="@+id/virgule"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="="
        android:id="@+id/egal"
        android:onClick="listenbtn"
        android:layout_weight="25"/>

</LinearLayout>

</LinearLayout>