<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingListEditor">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="5"
            android:fontFamily="casual"
            android:text="Adding a shopping list"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/edit1"
        android:layout_width="404dp"
        android:layout_height="415dp"
        android:layout_below="@+id/title"
        android:layout_centerInParent="true"
        android:layout_marginTop="68dp">

        <TextView
            android:layout_width="112dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/article"
            android:layout_marginLeft="-112dp"
            android:text="Article :"
            android:textColor="@color/colorBlack"
            android:textSize="25dp"
            android:textStyle="italic"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textAlignment="center"
            />


        <EditText
            android:id="@+id/article"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="top|left"
            android:hint="@string/to_shop"
            android:inputType="textMultiLine" />


        <ImageView
            android:id="@+id/image1"
            android:layout_width="210dp"
            android:layout_height="131dp"
            android:layout_below="@+id/article"
            android:background="@drawable/ic_image_black_24dp"
            android:scaleType="centerCrop" />


        <Button
            android:id="@+id/choosebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image1"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="-87dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Choose an image"
            android:textColor="@color/colorWhite"
            tools:ignore="InvalidId" />

        <TextView
            android:layout_width="112dp"
            android:layout_height="45dp"
            android:layout_below="@+id/image1"
            android:layout_alignLeft="@+id/quantity"
            android:layout_marginLeft="-112dp"
            android:text="Quantity :"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="@color/colorBlack"
            android:textSize="25dp"
            android:textStyle="italic" />

        <EditText

            android:id="@+id/quantity"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image1"
            android:layout_alignParentRight="true"
            android:gravity="top|left"
            android:hint="@string/qte"
            android:inputType="number" />

        <TextView
            android:layout_width="112dp"
            android:layout_height="45dp"
            android:layout_below="@+id/quantity"
            android:layout_alignLeft="@+id/amount"
            android:layout_marginLeft="-111dp"
            android:layout_marginTop="1dp"
            android:text="Amount :"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="@color/colorBlack"
            android:textSize="25dp"
            android:textStyle="italic" />

        <EditText

            android:id="@+id/amount"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quantity"
            android:layout_alignParentRight="true"
            android:gravity="top|left"
            android:hint="@string/price"
            android:inputType="number" />


        <TextView
            android:layout_width="182dp"
            android:layout_height="45dp"
            android:layout_below="@+id/amount"
            android:layout_alignLeft="@+id/quantity"
            android:layout_marginLeft="-111dp"
            android:layout_marginTop="1dp"
            android:text="Check if Purchase completed :"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="@color/colorBlack"
            android:textSize="19dp"
            android:textStyle="italic" />


        <CheckBox
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_below="@+id/amount"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="65dp"
            android:focusable="auto"
            android:id="@+id/checkbox_id"/>


        <Button
            android:id="@+id/nxtbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="28dp"
            android:background="@drawable/btn_bg"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="NEXT ARTICLE"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"/>
        <!--EditText

            android:id="@+id/editText3"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText2"
            android:gravity="top|left"
            android:inputType="textMultiLine" />


        <EditText

            android:id="@+id/editText4"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText3"
            android:gravity="top|left"
            android:inputType="textMultiLine" />
        <EditText

            android:id="@+id/editText5"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText4"
            android:gravity="top|left"
            android:inputType="textMultiLine" /-->

    </RelativeLayout>


    <Button
        android:id="@+id/createBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit1"
        android:layout_centerVertical="true"
        android:layout_marginTop="19dp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_bg"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Create"
        android:textColor="@color/colorWhite" />

